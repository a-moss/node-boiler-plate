{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "compiled",
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
